---
const lang = Astro.url.pathname.split('/')[1] ?? 'he';
const translations = {
  he: {
    hero_title: 'לחם נעמה',
    hero_slogan: 'מחמצת ללא גלוטן',
    footer_quickLinks: 'קישורים מהירים',
    nav_Home: 'דף הבית',
    nav_Products: 'מוצרים',
    nav_About: 'אודות',
    footer_contactUs: 'דברו איתנו',
    footer_contactText: 'אפשר לשלוח לנו מייל בכל שאלה, הערה או המלצה :)',
    footer_copyright: 'כל הזכויות שמורות ללחם נעמה © 2025',
    terms: 'תנאי שימוש'
  },
  en: {
    hero_title: 'Lechem Naama',
    hero_slogan: 'Gluten Free Sourdough',
    footer_quickLinks: 'Quick Links',
    nav_Home: 'Home',
    nav_Products: 'Products',
    nav_About: 'About',
    footer_contactUs: 'Contact Us',
    footer_contactText: 'Feel free to email us with any question, comment, or suggestion :)',
    footer_copyright: 'All rights reserved to Lechem Naama © 2025',
    terms: 'Terms of Use'
  },
} as const;
const t = translations[lang as keyof typeof translations];
---

<footer class="bg-[var(--brand-lighter)] border-t border-[var(--brand-secondary)] text-[var(--brand-text-title)] text-sm w-full">
  <div class="max-w-6xl mx-auto px-4 py-10">
    <!-- Grid sections -->
    <div class="flex flex-wrap justify-between text-sm text-[var(--brand-text-title)]">
      <!-- Section 1 -->
      <div class="basis-1/3 px-2 break-words text-center">
        <h4 class="font-semibold mb-1">{t.hero_title}</h4>
        <p class="text-brand-text-light mb-3">{t.hero_slogan}</p>
        <a href={`/${lang}/terms`} class="block text-sm hover:underline mb-2">{t.terms}</a>
        <div class="flex items-center justify-center gap-2 mt-2 ">
          <a href="your-link-here"><img src='/Instagram_Glyph_Black.svg' alt="Instagram" class="w-6 h-6" /></a>
          <a href="your-link-here"><img src='/facebook-new.png' alt="Facebook" class="w-6 h-6" /></a>
        </div>
      </div>

      <!-- Section 2 -->
      <div class="basis-1/3 px-2 text-center break-words">
        <h4 class="font-semibold mb-2">{t.footer_quickLinks}</h4>
        <ul class="space-y-1">
          <li><a href={`/${lang}/about`} class="hover:underline hover:text-brand-dark">{t.nav_About}</a></li>
          <li><a href={`/${lang}/`} class="hover:underline hover:text-brand-dark">{t.nav_Home}</a></li>
          <li><a href={`/${lang}/products`} class="hover:underline hover:text-brand-dark">{t.nav_Products}</a></li>
        </ul>
      </div>

      <!-- Section 3 -->
      <div class="basis-1/3 px-2 text-center break-words">
        <h4 class="font-semibold mb-2">{t.footer_contactUs}</h4>
        <p class="mb-2">{t.footer_contactText}</p>
        <a href="mailto:breadbynaama@gmail.com" class="text-brand-secondary hover:text-brand-secondary/80 font-medium break-all">
          breadbynaama@gmail.com
        </a>
      </div>
    </div>

    <!-- Copyright (separate block!) -->
    <div class="text-center text-xs text-brand-text-light pt-4">
      {t.footer_copyright}
    </div>
  </div>
</footer>

