---
// src/pages/404.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const lang = ['he', 'en'].includes(Astro.url.pathname.split("/")[1])
  ? (Astro.url.pathname.split("/")[1] as "he" | "en")
  : "he";


const translations = {
  he: {
    title: "אופס! הדף לא נמצא",
    desc: "נראה שהדף שחיפשת לא קיים.",
    button: "חזרה לדף הבית",
  },
  en: {
    title: "Oops! Page not found",
    desc: "It looks like the page you're looking for doesn't exist.",
    button: "Back to homepage",
  },
};

const t = translations[lang];
---

<BaseLayout lang={lang}>
  <div class="flex flex-col items-center justify-center min-h-[70vh] text-center p-8">
    <img
      src="/404.png"
      alt="Lost Bread"
      class="w-28 h-28 mb-6 opacity-80"
      loading="lazy"
    />

    <h1 class="text-4xl sm:text-5xl font-bold text-[var(--brand-dark)]">{t.title}</h1>
    <p class="mt-4 text-lg text-[var(--brand-light)]">{t.desc}</p>

    <a
      href={`/${lang}/`}
      class="mt-6 inline-block bg-[var(--big-buttons)] hover:bg-[var(--big-buttons-hover)] text-white py-2 px-6 rounded shadow transition-all"
    >
      {t.button}
    </a>


  </div>
</BaseLayout>
